<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/gameShowBuzzerID">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/mainMenuTextView"
        android:id="@+id/mainMenuTextView"
        android:textIsSelectable="false"
        android:linksClickable="false"
        android:textStyle="bold"
        android:textColorHint="#c1ff82"
        android:textColorLink="#73ff7e"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reactionTimerButton"
        android:id="@+id/reactionTimerButton"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/mainMenuTextView"
        android:layout_alignEnd="@+id/mainMenuTextView"
        android:layout_alignStart="@+id/mainMenuTextView"
        android:textSize="40sp"
        android:layout_alignParentEnd="false"
        android:onClick= "GoToReactionTimerGame"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gameShowBuzzerButton"
        android:id="@+id/gameShowBuzzerButton"
        android:layout_marginTop="76dp"
        android:textSize="40sp"
        android:layout_below="@+id/reactionTimerButton"
        android:layout_centerHorizontal="true"
        android:clickable="true" />

</RelativeLayout>
